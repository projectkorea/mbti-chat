{
  "name": "mbti-chat",
  "version": "1.0.0",
  "main": "build/server/app.js",
  "author": "JunhaKim",
  "license": "ISC",
  "scripts": {
    "postinstall": "npm run install:all",
    "install:all": "npm run install:server && npm run install:react && npm run install:functions",
    "install:server": "cd server && npm install",
    "install:react": "cd react && npm install",
    "install:functions": "cd functions && npm install",
    "type-check": "tsc --noEmit -p server/tsconfig.json",
    "build:server": "babel server --extensions \".ts,.js\" --out-dir build/server --source-maps inline",
    "build:assets": "cd react && npm run build",
    "build": "rimraf build && npm run type-check && npm run build:server && npm run build:assets",
    "dev:server": "cross-env NODE_ENV=development nodemon --watch server --ext ts,js --exec \"ts-node server/app.ts\"",
    "dev": "npm run build:assets && npm run dev:server",
    "prod": "npm run build && cross-env NODE_ENV=production node build/server/app.js"
  },
  "dependencies": {
    "core-js": "^3.35.1",
    "firebase-admin": "^9.11.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.23.9",
    "@babel/plugin-transform-object-rest-spread": "^7.23.4",
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-typescript": "^7.23.3",
    "@babel/runtime": "^7.23.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/node": "^16.4.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.12",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^4.3.5"
  }
}
