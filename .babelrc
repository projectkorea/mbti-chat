{
  "presets": [
    ["@babel/preset-typescript", {
      "allowNamespaces": true,
      "onlyRemoveTypeImports": true,
      "allowDeclareFields": true
    }],
    [
      "@babel/preset-env",
      {
        "targets": "defaults",
        "useBuiltIns": "usage",
        "corejs": {
          "version": 3,
          "proposals": true
        },
        "bugfixes": true
      }
    ]
  ],
  "plugins": [
    [
      "@babel/plugin-transform-runtime",
      {
        "corejs": false,
        "helpers": true,
        "regenerator": true
      }
    ],
    "@babel/plugin-transform-object-rest-spread"
  ]
} 