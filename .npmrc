node-linker=hoisted
# 패키지를 루트 node_modules에 호이스팅하되 심볼릭 링크와 하드 링크를 통해 중복을 최소화하는 방식

# node-linker=isolated 
# 각 패키지를 .pnpm 스토어에 격리 설치하고 엄격한 심볼릭 링크 구조로 의존성 트리 구성

public-hoist-pattern[]=@types/*
# 타입 정의 패키지들을 포함하여 이 패턴에 일치하는 패키지들을 루트 node_modules에 호이스팅

shamefully-hoist=false 
# 모든 의존성을 루트에 호이스팅하지 않음  